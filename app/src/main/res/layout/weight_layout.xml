<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#000000"
    android:id="@+id/weight_layout">

    <TextView
        android:id="@+id/weight_pitch"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Pitch(x-axis rotation):"
        android:textSize="20dp"
        android:textColor="#D4D4D4"/>
    <TextView
        android:id="@+id/weight_roll"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/weight_pitch"
        android:text="Roll(y-axis rotation):"
        android:textSize="20dp"
        android:textColor="#D4D4D4"/>
    <TextView
        android:id="@+id/weight_filter"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/weight_roll"
        android:text="滤波器系数:"
        android:textSize="20dp"
        android:textColor="#D4D4D4"/>

    <Button
        android:layout_width="match_parent"
        android:layout_height="406dp"
        android:layout_below="@+id/weight_filter"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="20dp"
        android:layout_marginRight="20dp"
        android:layout_marginBottom="50dp"
        android:text="先连接设备"
        android:textSize="20dp"
        android:textColor="#FFFFFF"
        android:background="#5B5B5B"/>

</RelativeLayout>
